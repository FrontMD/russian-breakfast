extends ../layouts/default.pug

block variables
    - let page = 'city'

block content
    main.page.city-page(data-js="cityPage")
        .city-page__bg.city-page__bg--1
            img(src="./img/cities/city_bg_1.png" alt="")
        .city-page__bg.city-page__bg--2
            img(src="./img/cities/city_bg_2.png" alt="")         
        section.city-intro
            .m-container.city-intro__container
                .city-intro__img
                    picture
                        source(srcset="./img/cities/cities_intro_bg.png" media="(max-width: 1023px)")
                        img(src="./img/cities/city_intro.png" alt="")
                .city-intro__logo.logo
                    img(src="./img/logo.svg" alt="Логотип Русский завтрак")
                .city-intro__desc
                    +title({
                        tag: "h1",
                        classes: "city-intro__title",
                        text: "фестиваль <br>в гостиницах, <br>кафе и ресторанах"
                    })
                    .city-intro__subtitle Станьте новой точкой на карте всероссийского Культурно-гастрономического проекта
                    .city-intro__date 1 октября — 30 ноября

        section.city-map
            .m-container
                .city-map__inner
                    .city-map__decor
                        img(src="./img/cities/city_map.png")
                    +title({
                        tag: "h2",
                        classes: "city-map__title",
                        text: "Где попробовать «Русский завтрак»?"
                    })
                    .city-map__text Если вы собрались поехать в один из ХХ городов, обязательно остановитесь в гостинице с «Русским завтраком». А если захотите узнать о местной кухне, посетите один из ресторанов-участников, где откроете для себя гастрономические традиции региона.
                    .city-map__map(data-js="cityMap")

