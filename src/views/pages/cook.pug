extends ../layouts/default.pug

block variables
    - let page = 'cook'

block content
    main.page.cooks-page(data-js="cookPage")
        +c-intro
        section.cook
            .m-container
                +title({
                    tag: "h1",
                    classes: "cooks-page__title",
                    text: "Узнайте, как приготовить вкусные блюда на завтрак с&nbsp;учётом кулинарных особенностей регионов России."
                })
                .cook__content
                    .cook__main
                        +btn({
                            name: 'ко всем шеф-поварам',
                            classes: 'cook__back with-angles',
                            icon: true,
                            positionIcon: 'left',
                            link: 'cooks.html',
                            iconName: 'btn_arrow',
                        })
                        .cook__photo(data-js="cookPhoto")
                            img(src='' alt='')
                            .cook__year(data-js="cookYear")
                        .cook__name(data-js="cookName")
                        .cook__info(data-js="cookInfo")
                        .cook__city(data-js="cookCity")
                        .cook__logo(data-js="cookLogo")
                            img(src='' alt='')
                        .cook__quote(data-js="cookQuote")
                    .cook__recipes(data-js="cookRecipes")