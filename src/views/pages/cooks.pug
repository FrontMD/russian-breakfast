extends ../layouts/default.pug

block variables
    - let page = 'cooks'

block content
    main.page.cooks-page(data-js="cooksPage")
        +c-intro
        section.cooks
            .m-container
                +title({
                    tag: "h1",
                    classes: "cooks-page__title",
                    text: "Для проекта были отобраны шеф-повара и&nbsp;рестораторы, которые делают яркие коллаборации в&nbsp;разных сегментах туристической инфраструктуры. Смотрите их кулинарные мастер-классы и&nbsp;узнавайте, каким может быть завтрак в&nbsp;русском стиле."
                })

                .cooks__tabs(data-js='tabsTabs')
                    .swiper-wrapper
                        +btn({
                            name: '2024',
                            classes: 'cooks__tab swiper-slide',
                            icon: false,
                        })
                        +btn({
                            name: '2023',
                            classes: 'cooks__tab swiper-slide',
                            icon: false,
                        })
                .cooks__slider(data-js='tabsSlides')
                    .swiper-wrapper
                        .cooks__list.swiper-slide(data-js="cooksSlide24")
                        .cooks__list.swiper-slide(data-js="cooksSlide23")
